{
  "weather_scenarios": [
    {
      "name": "basic_weather_query",
      "description": "Simple weather query for a major city",
      "user_input": "What's the weather like in New York?",
      "expected_elements": ["temperature", "weather", "new york"],
      "api_response": {
        "timelines": {
          "hourly": [
            {
              "time": "2025-09-28T14:00:00Z",
              "values": {
                "temperature": 75,
                "humidity": 65,
                "windSpeed": 8.5,
                "weatherCode": 1000,
                "precipitationProbability": 10
              }
            }
          ]
        }
      }
    },
    {
      "name": "weather_with_location_clarification",
      "description": "Weather query that might need location clarification",
      "user_input": "What's the weather like in Paris?",
      "expected_elements": ["paris", "temperature", "weather"],
      "api_response": {
        "timelines": {
          "hourly": [
            {
              "time": "2025-09-28T15:00:00Z",
              "values": {
                "temperature": 68,
                "humidity": 70,
                "windSpeed": 12.0,
                "weatherCode": 1001,
                "precipitationProbability": 25
              }
            }
          ]
        }
      }
    },
    {
      "name": "weather_planning_query",
      "description": "Weather query for activity planning",
      "user_input": "Should I go for a run today? What's the weather like?",
      "expected_elements": ["run", "weather", "outdoor", "activity"],
      "api_response": {
        "timelines": {
          "hourly": [
            {
              "time": "2025-09-28T16:00:00Z",
              "values": {
                "temperature": 72,
                "humidity": 55,
                "windSpeed": 5.0,
                "weatherCode": 1000,
                "precipitationProbability": 5
              }
            }
          ]
        }
      }
    }
  ],
  "search_scenarios": [
    {
      "name": "basic_search_query",
      "description": "Simple information search",
      "user_input": "Find information about artificial intelligence",
      "expected_elements": ["artificial intelligence", "search", "results"],
      "api_response": {
        "items": [
          {
            "title": "Introduction to Artificial Intelligence",
            "snippet": "Comprehensive guide to AI concepts, machine learning, and applications in modern technology.",
            "link": "https://www.ai-guide.com"
          },
          {
            "title": "AI Research and Development",
            "snippet": "Latest developments in artificial intelligence research and breakthrough technologies.",
            "link": "https://www.ai-research.org"
          }
        ]
      }
    },
    {
      "name": "location_based_search",
      "description": "Search for location-specific information",
      "user_input": "Find the best coffee shops in Seattle",
      "expected_elements": ["coffee", "seattle", "shops", "best"],
      "api_response": {
        "items": [
          {
            "title": "Top 10 Coffee Shops in Seattle",
            "snippet": "Discover Seattle's finest coffee shops, from artisanal roasters to cozy neighborhood cafes.",
            "link": "https://www.seattle-coffee.com"
